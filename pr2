# Get two integer inputs from the user
int1 = int(input("Enter first integer: "))
int2 = int(input("Enter second integer: "))

# Get two float inputs from the user
float1 = float(input("Enter first float: "))
float2 = float(input("Enter second float: "))

# Perform operations on integers
print("Operations on integers:")
print("Addition:", int1 + int2)
print("Subtraction:", int1 - int2)
print("Multiplication:", int1 * int2)
print("Integer Division:", int1 // int2)
print("Floor Division:", int1 // int2)
print("Modulo Division:", int1 % int2)

# Perform operations on floats
print("\nOperations on floats:")
print("Addition:", float1 + float2)
print("Subtraction:", float1 - float2)
print("Multiplication:", float1 * float2)
print("Integer Division:", float1 // float2)
print("Floor Division:", float1 // float2)
print("Modulo Division:", float1 % float2)
